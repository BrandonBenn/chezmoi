typeset -U PATH path
path=(~/.local/bin ~/bin ~/.asdf/shims ~/.nimble/bin ~/.asdf/installs/python/3.9.6/bin "$path[@]")

export PATH
export XDG_DATA_HOME=~/.local/share
export EDITOR=nvim
export VISUAL=$EDITOR
export TERM=xterm-256color
export HISTFILE=~/.cache/history.zsh
export HISTSIZE=10000
export SAVEHIST=10000
declare -A ZINIT  # initial Zinit's hash definition
ZINIT[HOME_DIR]=~/.local/share/zinit
