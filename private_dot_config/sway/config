set $FONT "FreeSans"
set $mod Mod4
set $term kitty -e fish
set $menu j4-dmenu-desktop --dmenu='bemenu -i -p "" --fn "FreeSans 11" --hb "#f7f6f4"' --term=kitty
set $lock swaylock -f -c 1c1c1c

title_align center
default_border pixel 2
smart_borders on

font "$FONT 11"
output * background #000000 solid_color
output eDP-1 scale 1.4
input type:keyboard xkb_options caps:escape
input type:touchpad {
   dwt enabled
   tap enabled
   natural_scroll enabled
   middle_emulation enabled
}

exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name '$FONT 11'
}

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec swayidle -w timeout 300 "$lock" timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep "$lock"
exec fcitx5
exec gammastep -l 23.6:120.9 6000:3000

include ~/.config/sway/config.d/*
